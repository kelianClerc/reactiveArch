<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_gravity="center_vertical"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/recapItemImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="1"
        tools:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/recapItemText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Name First Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/unit_2"
        android:layout_marginBottom="@dimen/unit_2"
        app:layout_constraintEnd_toStartOf="@id/recapItemButton"
        app:layout_constraintStart_toEndOf="@id/recapItemImage"
        android:layout_marginStart="@dimen/unit_2"
        android:layout_marginEnd="@dimen/unit_2"
        />
    <ImageButton
        android:id="@+id/recapItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/unit_2"
        android:src="@drawable/ic_delete"
        android:background="?android:selectableItemBackground"
        />

</android.support.constraint.ConstraintLayout>
